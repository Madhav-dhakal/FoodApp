@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row shadow rounded-1">
        <div class="col-sm-12 col-md-6 col-xl-6 col-lg-6">
            <div id="carouselExampleSlidesOnly" class="carousel slide " data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item active">
                        <img src="/images/carousel/carsouel.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/carousel/pizza.jpg" class="d-block w-100 h-100" alt="Recipes">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/carousel/burger.jpg" class="d-block w-100 h-120" alt="Recipes">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="mb-2">
                <h2>Get The Best <span class="text-success"> Food </span> From <span class="text-success"> The Best Restaurants.</span></h2>
            </div>
            <div class="mb-2 p-2">
                <span><i class="fa-solid fa-seedling text-success fs-4 mx-2"></i></span>
                <span class="fs-5 text-dark">Fresh Food</span>
            </div>
            <div class="mb-3 p-1.5">
                <span><i class="fa-solid fa-leaf text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark">Healthy Meal</span>
            </div>
            <div class="mb-2 p-2">
                <span><i class="fa-solid fa-person-biking text-success mx-2 fs-4"></i></span>
                <span class="fs-5 text-dark">Fastest Delivery</span>
                <p class="py-2">We Promise Delivery Order within 30 Min</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 mb-3">
        <h2 class="text-dark fst-italic">Today's Special</h2>
        <div id="todaysSpecial" class="row">
            <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <div class="card dishCard">
                    <img class="card-img-top h-75" src="/images/carousel/cake.jpeg" alt="dish"/>
                    <div class="cad-body">
                        <p class="card-title fw-bold">Cake</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <div class="card dishCard">
                    <img class="card-img-top h-75" src="/images/carousel/momo.jpg" alt="dish" />
                    <div class="cad-body">
                        <p class="card-title fw-bold">MoMo</p>
                    </div>
                </div>
            </div>

            <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                <div class="card dishCard">
                    <img class="card-img-top h-75" src="/images/carousel/pizza.jpg" alt="dish" />
                    <div class="cad-body">
                        <p class="card-title fw-bold">Pizza</p>
                    </div>
                </div>
            </div>
        </div>
           
        </div>
    </div>
</div>
